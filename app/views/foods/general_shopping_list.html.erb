<h1>Shopping List</h1>

<div>
  <div>Amount of items to buy: <%= @items_to_buy %></div>
  <div>Total value of food needed: <%= @total_value %></div>
</div>

<%= render 'shared/shopping_table' do %>
  <% @foods.each do |food| %>
    <% recipe_food = RecipeFood.find_by(food:) %>
    <% unless recipe_food.nil? %>
      <%= render 'shopping_item', food:, recipe_food: %>
    <% end %>
  <% end %>
<% end %>